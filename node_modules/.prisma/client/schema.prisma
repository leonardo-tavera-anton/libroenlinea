// prisma/schema.prisma

// Configuración para usar PostgreSQL
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL") // Railway usará esta variable para conectar
}

generator client {
  provider = "prisma-client-js"
}

// El modelo de datos de tu libro ajustado para PRIVACIDAD
model Libro {
  // CAMBIO CLAVE: Usamos BigInt y el ID es proporcionado por el servidor (UserID)
  id BigInt @id @unique // ¡Ahora soporta IDs largos de usuario!

  titulo    String @default("Libro de Usuario Privado")
  contenido String @default("") // Contenido del libro

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
