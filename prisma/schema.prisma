// Configuración para usar PostgreSQL
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL") // Railway usará esta variable para conectar
}

generator client {
  provider = "prisma-client-js"
}

// El modelo de datos de tu libro
model Libro {
  id        Int     @id @default(autoincrement()) // ID único (lo usaremos para la fila 1)
  titulo    String  @default("El Libro de Mi Novia")
  contenido String  @default("") // Aquí se guardará todo el texto del libro
}